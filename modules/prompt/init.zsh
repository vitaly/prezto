# Load and execute the prompt theming system.
autoload -Uz promptinit && promptinit

if p -n "${SSH_TTY:-}"; then
  ZSH_PROMPT_HOST=1
fi

# Load the prompt theme.
zstyle -a ':prezto:module:prompt' theme 'prompt_argv'
if [[ "$TERM" == (dumb|linux|*bsd*) ]] || (( $#prompt_argv < 1 )); then
  prompt 'off'
else
  prompt "$prompt_argv[@]"
fi
unset prompt_argv
